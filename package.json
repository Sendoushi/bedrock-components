{
  "name": "bedrock-components",
  "version": "0.0.1",
  "description": "Frontend components",
  "authors": [
    "Joel Santos <joel@sendoushi.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:sendoushi/bedrock-components.git"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^2.0.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-react": "^6.2.0",
    "stylelint": "^7.3.1",
    "stylelint-config-standard": "^13.0.0",
    "stylelint-scss": "^1.3.4"
  },
  "dependencies": {
    "bedrock": "git://github.com/Sendoushi/bedrock.git#0.2.1",
    "chai": "^3.5.0",
    "dot": "^1.0.3",
    "es6-promise": "^4.0.5",
    "mocha": "^3.2.0",
    "mochawesome": "^1.5.4",
    "mout": "^1.0.0"
  },
  "scripts": {
    "test": "npm run eslint-test; npm run stylelint-test; npm run mocha-test",
    "mocha-test": "$(npm bin)/mocha ./test/test.js",
    "mocha-html-test": "npm run mocha-test -- --reporter mochawesome --reporter-options reportDir=\"test/_report\",reportName=\"report\",reportTitle=\"Bedrock utils report\",inlineAssets=true",
    "eslint": "$(npm bin)/eslint",
    "eslint-test": "npm run eslint -- ./tasks/**/*.js",
    "stylelint": "$(npm bin)/stylelint",
    "stylelint-test": "npm run stylelint -- ./src/**/*.scss"
  }
}
